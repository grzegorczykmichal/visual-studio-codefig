{
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.detectIndentation": true,
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.rulers": [80],
  "editor.tokenColorCustomizations": {
    "[Ayu Mirage]": {},
    "[Atom One Dark]": {}
  },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "twig": "html",
    "html": "twig",
    "javascript": "javascriptreact"
  },
  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // "**/bin": true,
    "**/obj": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.rendererType": "dom",
  "workbench.activityBar.visible": true,
  "workbench.editor.enablePreview": false,
  "workbench.useExperimentalGridLayout": true,
  "workbench.colorCustomizations": {
    "[Ayu Mirage]": {
      "editorWhitespace.foreground": "#323b4d",
      "editor.lineHighlightBackground": "#14181f",
      "editorIndentGuide.activeBackground": "#8492ae",
      "editorIndentGuide.background": "#3c475d",
      "editorSuggestWidget.selectedBackground": "#323b4d",
      // "sideBarSectionHeader.border": "#14181f",
      "sideBarSectionHeader.foreground": "#EEE"
    },
    "[Atom One Dark]": {
      // ACTIVITY BAR
      "activityBar.background": "#21252B",
      // EDITOR
      "editor.lineHighlightBackground": "#000000dd",
      "editorBracketMatch.background": "#ffdd0044",
      "editorBracketMatch.border": "#ffdd0000",
      "editorCursor.background": "#ffdd00",
      "editor.selectionBackground": "#f200f255",
      "editor.selectionForeground": "#000",
      "editorRuler.foreground": "#21252B",
      // "editor.selectionHighlightBackground": "#50576152",
      "editorIndentGuide.activeBackground": "#ffffff70",
      "editorIndentGuide.background": "#282C34",
      //TABS
      "tab.border": "#21252B",
      "tab.inactiveForeground": "#ffffff4b"
      //CURSOR
      // GIT
      // "gitDecoration.addedResourceForeground": "#00Ffa",
      // "gitDecoration.untrackedResourceForeground": "#faf",
      // "gitDecoration.deletedResourceForeground": "#666",
      // "gitDecoration.modifiedResourceForeground": "#ff0"
    }
  },
  "workbench.startupEditor": "newUntitledFile",
  "window.menuBarVisibility": "toggle",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}",
  "window.zoomLevel": 0,
  "zenMode.centerLayout": false,
  "editor.minimap.renderCharacters": false,
  "breadcrumbs.enabled": true,
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "material-icon-theme",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "editor.formatOnSave": true,
  "javascript.implicitProjectConfig.experimentalDecorators": true
}
